  <link rel="stylesheet" href="/stylesheets/app.css">
  <title>DriveAway Delivery System</title>
</head>

<body>
  <nav class="container mx-auto flex items-center justify-between py-4">
    <div>
      <a href="/"><img src="/images/logo.png" alt="logo"></a>
    </div>
    <div>
      <ul class="flex items-center">

        <% if(user) { %>
          <% if(user.role!=='customer' ){ %>
            <li class="ml-6"><a href="/admin/add-item">Menu</a></li>
            <% } else { %>
              <li class="ml-6"><a href="/">Home</a></li>
              <% } %>
                <li class="ml-6"><a href="/<%- user.role %>/orders">Order</a></li>
                <li class="ml-6">
                  <form id="logout" action="/logout" method="POST">
                    <a onclick="document.getElementById('logout').submit()" href="#">Logout</a>
                </li>
                </form>

                <% } else { %>
                  <li class="ml-6"><a href="/">Home</a></li>
                  <li class="ml-6"><a href="/register">Register</a></li>
                  <li class="ml-6"><a href="/login">Login</a></li>
                  <% } %>

                    <li class="ml-6 "><a href="/cart" class="inline-block px-4 py-2 rounded-full flex items-center">
                        <span id='cartCounter' class="text-white font bold pr-2">
                          <%= session.cart ? session.cart.totalQty : '' %>
                        </span>
                        <img src="/images/cart.png" alt="">
                      </a></li>
      </ul>
    </div>
  </nav>

  <%- body %>
    <footer>
      <div class="flex items-center justify-center my-4">

        <p class="text-gray-500 text-xs">All rights reserved &copy;2021 Aditya Chowdhury.</p>
      </div>
    </footer>
